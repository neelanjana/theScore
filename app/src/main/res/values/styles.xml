<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="name">
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">@dimen/padding_small</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="player_name" parent="name">
        <item name="android:textSize">@dimen/font_large</item>
    </style>


    <style name="wins">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">#888888</item>
        <item name="android:layout_marginTop">@dimen/padding_xsmall</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="info">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">#666666</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="sort_item">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">#333333</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@drawable/rounded_corner_white</item>

    </style>
</resources>